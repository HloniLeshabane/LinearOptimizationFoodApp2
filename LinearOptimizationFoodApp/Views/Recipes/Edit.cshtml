@model LinearOptimizationFoodApp.ViewModels.EditRecipeViewModel
@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Recipes" asp-action="Index">Recipes</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-utensils me-2"></i>@Model.Name
                    </h2>
                    <span class="badge bg-light text-primary fs-6">
                        <i class="fas fa-users me-1"></i>Feeds @Model.Feeds people
                    </span>
                </div>
            </div>
            <div class="card-body p-4">
                <p class="lead text-muted mb-4">@Model.Description</p>

                <h4 class="mb-3">
                    <i class="fas fa-list-ul me-2 text-success"></i>Required Ingredients
                </h4>

                <div class="row">
                    @foreach (var ingredient in Model.RecipeIngredients)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="fas fa-check-circle text-success me-3"></i>
                                <div>
                                    <strong>@ingredient.Quantity @ingredient.Ingredient.Unit</strong>
                                    <div class="text-muted">@ingredient.Ingredient.Name</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-4 p-3 bg-info bg-opacity-10 rounded">
                    <h6 class="text-info mb-2">
                        <i class="fas fa-info-circle me-2"></i>Recipe Information
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li><strong>Servings:</strong> @Model.Feeds people</li>
                        <li><strong>Total Ingredients:</strong> @Model.RecipeIngredients.Count items</li>
                    </ul>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-controller="Recipes" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Recipes
                    </a>
                    <a href="/Admin/Recipes/Edit/@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Recipe
                    </a>
                    <a asp-controller="Ingredients" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-carrot me-2"></i>Check My Ingredients
                    </a>
                    <a asp-controller="Optimizer" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-magic me-2"></i>Optimize Meals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>